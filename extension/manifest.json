{
  "manifest_version": 3,
  "name": "SimGrid to RaceStand Importer",
  "version": "1.0.1",
  "description": "Import championship data from TheSimGrid.com into RaceStand",
  "permissions": ["activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RaceStand Importer"
  },
  "host_permissions": ["*://thesimgrid.com/*", "*://www.thesimgrid.com/*"],
  "content_scripts": [
    {
      "matches": [
        "*://thesimgrid.com/championships/*",
        "*://www.thesimgrid.com/championships/*"
      ],
      "js": ["lib/lz-string.min.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["racestand/racestand.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
